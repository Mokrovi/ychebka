<UserControl x:Class="ychebka.Menu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ychebka"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="1800">
    <StackPanel Orientation="Horizontal" Height="100" Background="Azure">
        <StackPanel.Resources>
            <Style TargetType="Button">
                <Setter Property="Margin" Value="20"/>
                <Setter Property="FontSize" Value="30"/>
                <Setter Property="Width" Value="250"/>
            </Style>
        </StackPanel.Resources>

        <Button Content="Клиент" Click="Button_Click"/>
        <Button Content="Риэлтор" Click="Button_Click_1"/>
        <Button Content="Объекты недвижимости" Width="Auto" Click="Button_Click_2"/>
        <Button Content="Сделки" Click="Button_Click_3"/>
        <Button Content="Предложения" Click="Button_Click_4"/>
        <Button Content="Потребности" Click="Button_Click_5"/>
    </StackPanel>
</UserControl>
